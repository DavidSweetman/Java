		JLabel lblPhone = new JLabel("Phone");
		lblPhone.setBounds(354, 214, 69, 20);
		panel.add(lblPhone);
		
		JButton btnPrev = new JButton("<-");
		btnClear.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent arg0) {
				try{
					if (n == null || n.getPrev() == null){
						n = DLL.getNode(1);
						
					}else{
						n = n.getPrev();
					}
					while(n.getPriority() != 0){
						n = n.getPrev();
					}
					
					IPerson p = n.getPrev().getPatient();
					nameTF.setText(p.getName());
					dobTF.setText(p.getDob());
					conditionTA.setText(p.getCondition());
					phoneTF.setText(p.getPhone());
					addressTF.setText(p.getAddress());
					}catch(NullPointerException NPe){
						error1TF.setText("No More Patients");
					}
				
				

				
				
			}
		});
		btnPrev.setBounds(0, 0, 187, 82);
		panel.add(btnPrev);
		
		JButton btnNext = new JButton("->");
		btnClear.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent arg0) {
				
				IPerson p = n.getNext().getPatient();
				nameTF.setText(p.getName());
				dobTF.setText(p.getDob());
				conditionTA.setText(p.getCondition());
				phoneTF.setText(p.getPhone());
				addressTF.setText(p.getAddress());
				
				
			}
